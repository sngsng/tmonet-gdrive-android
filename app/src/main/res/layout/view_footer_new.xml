<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:gravity="bottom"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/empty_state_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_footer_left"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="72dp"
            android:paddingTop="6dp"
            android:visibility="gone">

            <kr.co.tmonet.gdrive.view.NotoTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginStart="12dp"
                android:text="@string/title_msg_none_service"
                android:textColor="@color/colorWhite"
                android:textSize="16sp"
                app:fontStyle="demilight"/>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/shareing_state_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-72dp"
            android:layout_marginStart="-72dp"
            android:background="@drawable/bg_footer_left"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="72dp"
            android:paddingTop="6dp"
            android:visibility="visible">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginStart="24dp"
                android:src="@drawable/ic_remain_time_54_x_43"/>

            <kr.co.tmonet.gdrive.view.NotoTextView
                android:id="@+id/remain_time_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:text="999:35"
                android:textColor="@color/colorWhite"
                android:textSize="30sp"
                app:fontStyle="bold"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginStart="12dp"
                android:orientation="vertical">

                <kr.co.tmonet.gdrive.view.NotoTextView
                    android:id="@+id/start_date_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="05-03"
                    android:textColor="@color/colorWhite"
                    android:textSize="16sp"
                    app:fontStyle="demilight"/>

                <kr.co.tmonet.gdrive.view.NotoTextView
                    android:id="@+id/end_date_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="05-03"
                    android:textColor="@color/colorWhite"
                    android:textSize="16sp"
                    app:fontStyle="demilight"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:orientation="vertical">

                <kr.co.tmonet.gdrive.view.NotoTextView
                    android:id="@+id/start_time_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="02:21"
                    android:textColor="@color/colorWhite"
                    android:textSize="16sp"
                    app:fontStyle="bold"/>

                <kr.co.tmonet.gdrive.view.NotoTextView
                    android:id="@+id/end_time_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="14:20"
                    android:textColor="@color/colorWhite"
                    android:textSize="16sp"
                    app:fontStyle="bold"/>

            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_marginStart="6dp"
                android:src="@drawable/ic_between_time_16_x_16"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-46dp"
            android:layout_marginStart="-46dp"
            android:background="@drawable/bg_footer_middle"
            android:elevation="-2dp"
            android:gravity="center"
            android:orientation="vertical">

            <kr.co.tmonet.gdrive.view.NotoTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title_air_condition"
                android:textColor="@color/colorSkyBlue"
                android:textSize="16sp"
                app:fontStyle="medium"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="4dp"
                android:background="@color/colorBlack"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <kr.co.tmonet.gdrive.view.NotoTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/title_co"
                        android:textColor="@color/colorWhite43"
                        android:textSize="14sp"
                        app:fontStyle="medium"/>

                    <kr.co.tmonet.gdrive.view.NotoTextView
                        android:id="@+id/co_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="220"
                        android:textColor="@color/colorWhite"
                        android:textSize="14sp"
                        app:fontStyle="medium"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginStart="12dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <kr.co.tmonet.gdrive.view.NotoTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/title_co2"
                        android:textColor="@color/colorWhite43"
                        android:textSize="14sp"
                        app:fontStyle="medium"/>

                    <kr.co.tmonet.gdrive.view.NotoTextView
                        android:id="@+id/co2_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="220"
                        android:textColor="@color/colorWhite"
                        android:textSize="14sp"
                        app:fontStyle="medium"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginStart="12dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <kr.co.tmonet.gdrive.view.NotoTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/title_alcohol"
                        android:textColor="@color/colorWhite43"
                        android:textSize="14sp"
                        app:fontStyle="medium"/>

                    <kr.co.tmonet.gdrive.view.NotoTextView
                        android:id="@+id/alcohol_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="220"
                        android:textColor="@color/colorWhite"
                        android:textSize="14sp"
                        app:fontStyle="medium"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginStart="12dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <kr.co.tmonet.gdrive.view.NotoTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/title_temp_humi"
                        android:textColor="@color/colorWhite43"
                        android:textSize="14sp"
                        app:fontStyle="medium"/>

                    <kr.co.tmonet.gdrive.view.NotoTextView
                        android:id="@+id/temp_humi_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="27\u2103·55%"
                        android:textColor="@color/colorWhite"
                        android:textSize="14sp"
                        app:fontStyle="medium"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-46dp"
            android:layout_marginStart="-46dp"
            android:background="@drawable/bg_footer_right"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingLeft="44dp"
            android:paddingRight="20dp"
            android:paddingTop="6dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <kr.co.tmonet.gdrive.view.NotoTextView
                    android:id="@+id/charge_state_text_view"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="충전중"
                    android:textColor="@color/colorSkyBlue"
                    android:textSize="16sp"
                    app:fontStyle="medium"/>

                <ImageView
                    android:id="@+id/charge_state_image_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_battery_standby_60_x_19"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <kr.co.tmonet.gdrive.view.NotoTextView
                    android:id="@+id/running_state_text_view"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="주행가능"
                    android:textColor="@color/colorSkyBlue"
                    android:textSize="16sp"
                    app:fontStyle="medium"/>

                <kr.co.tmonet.gdrive.view.NotoTextView
                    android:id="@+id/distance_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="120km"
                    android:textColor="@color/colorWhite"
                    android:textSize="18sp"
                    app:fontStyle="bold"/>
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>
</layout>